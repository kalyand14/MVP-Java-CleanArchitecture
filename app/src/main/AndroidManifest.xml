<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.basics">

    <application
        android:name=".core.TodoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".features.todo.presentation.splash.SplashActivity"
            android:theme="@style/SplahAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".features.todo.presentation.home.HomeActivity" />
        <activity
            android:name=".features.todo.presentation.login.LoginActivity"
            android:theme="@style/SplahAppTheme" />
        <activity android:name=".features.todo.presentation.registration.RegisterUserActivity"
            android:theme="@style/SplahAppTheme"/>
        <activity android:name=".features.todo.presentation.todo.edit.EditTodoActivity" />
        <activity android:name=".features.todo.presentation.todo.add.AddTodoActivity" />
    </application>

</manifest>